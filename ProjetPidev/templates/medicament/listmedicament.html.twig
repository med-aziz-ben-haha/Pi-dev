{% include 'temp1.html.twig' %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<table>
    <tr>
        <td>
            <form method="post" action="{{ path ('recherchemed') }}">
                <label>Rechercher</label>
                <input type="text" name="search"><input type="submit" value="Recherche">
            </form>
        </td>
        <td>
            <form action=" {{ path('trimedicament') }} "><button>Trier medicament</button></form>
        </td>
        <td>
            <form action=" {{ path('Excel') }} "><button>Exporter excel</button></form>
        </td>
        <td>
            <form action=" {{ path('PDF') }} "><button style ="margin-left: 950%">Imprimer</button></form>
        </td>
    </tr>
</table>

<table border="3" style="width: 100%;text-align: center;border-style: solid;border-color:#a50e0e;font-size: 20px; margin-top: 1%">
    <tr>
        <td>id</td>
        <td> Nom du médicament </td>
        <td> Description du médicament </td>
        <td> Disponibilité </td>
        <td> Image du medicament </td>
        <td> Date de modification </td>
        <td> Supprimer </td>
        <td> Edit </td>
    </tr>
    {% for i in listmedicament %}
        <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.nomMedicament }}</td>
            <td> {{ i.Descmedicament }} </td>

            {% if i.dispo == 1 %}
            <td><img src="{{ asset ('bundles/dist/img/available.png') }}" alt="Disponible"></td>
            {% endif %}
            {% if i.dispo == 0 %}
                <td><img src="{{ asset ('bundles/dist/img/nn available.png') }}" alt="Non disponible"></td>
            {% endif %}


            <td><img style=" padding-right: 2px; padding-left: 2px;  width:75px ; height: 75px ; " src="{{ asset ('uploads/brochures/'~ i.getImgMedicament() ) }}" alt="Image"></td>
            <td> {{ i.dateModif|date("d/m/Y") }} </td>

            <td><a href="{{ path('Medicamentremove',{'id':i.id} )}}">Supprimer</a></td>
            <td><a href="{{ path('Medicamentmodifier',{'id':i.id} )}}">Editer</a></td>
        </tr>
    {% endfor %}
</table>

<a style="font-size: 20px"; href="{{ path('Medicamentajout') }}">Ajouter medicament</a>
<center>
    {{ knp_pagination_render(listmedicament) }}
</center>

